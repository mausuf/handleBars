<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>MMmmm Burger</h1>
        </div>
        <div class="col-xs-6 text-center" id="task">
            <div class="row">
                {{#each burger_data}}   {{!-- Loop through burger data, and for each burger object its going to display it's data --}}
                    {{#unless this.devoured}}   {{!-- It will only display burgers that have NOT been devoured --}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
                <div class="col-xs-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value="{{this.id}}">

                        <br>

                        <button type="submit" class="btn btn-default">Devour It!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}    
            </div>
        </div>
    </div>
</div>